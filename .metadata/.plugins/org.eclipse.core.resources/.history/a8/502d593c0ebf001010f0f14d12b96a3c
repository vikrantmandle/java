package com.app.basic.streams.revision;

import java.util.Arrays;
import java.util.Comparator;
import java.util.List;
import java.util.Map;
import java.util.Optional;
import java.util.TreeMap;
import java.util.stream.Collectors;

import com.app.java.streams.prep.Employee;

public class Day5 {
	
	//Group names alphabetically using Stream API
	static void problem1() {
		List<String> names=Arrays.asList("Alice", "Bob", "Arjun", "Charlie", "Ankit", "David");
		List<String> sortedNames=names.stream().sorted().toList();
		sortedNames.forEach(System.out::println);
		System.out.println("*******");
		Map<String, List<String>> chronologicalNames=names.stream().collect(Collectors.groupingBy(name->name.substring(0, 1),TreeMap::new,Collectors.toList()));
		chronologicalNames.forEach((a,b)->System.out.println("Key= "+a+" Value ="+b));
	}
	
	static void problem2() {
		List<Employee> employeeData=Employee.populateEmployee();
		Map<String,Optional<Employee>>highestEmpSalary=	employeeData.stream().collect(Collectors.groupingBy(Employee::getDepartment, Collectors.maxBy(Comparator.comparingLong(Employee::getSalary))));
		highestEmpSalary.forEach((a,b)->System.out.println("Department :"+a +" "+b.orElse(null)));
	}

	static void problem3() {
		List<Employee> employeeData=Employee.populateEmployee();
		List<String> allDepartmentNames=employeeData.stream().map(Employee::getDepartment).distinct().collect(Collectors.toList());
		String finalDepartmentNames=allDepartmentNames.stream().collect(Collectors.joining(", ", "[", "]"));
		System.out.println("All Department Names=>"+finalDepartmentNames);
	}
	
	static void problem4() {
		List<Employee> employeeData=Employee.populateEmployee();
		
		Map<String,Optional<Employee>>empData=employeeData.stream().collect(Collectors.groupingBy(Employee::getDepartment,
				Collectors.collectingAndThen(Collectors.toList(), list->list.stream().sorted(Comparator.comparingLong(Employee::getSalary).reversed()).skip(1).findFirst())));
		empData.forEach((dep,data)->System.out.println("Department= "+dep+"  "+data.orElse(null)));
		
	}
	
	static void problem5() {
		List<Employee>empData=Employee.populateEmployee();
		Map<Boolean,List<Employee>>sortedData=empData.stream().collect(Collectors.partitioningBy(n->n.getSalary()>100000));
		System.out.println("High earners: ");
		sortedData.get(true).forEach((a)->System.out.println(a.getName()) );
	
		System.out.println("\nOthers: ");
		sortedData.get(false).forEach((a)->System.out.println(a.getName()) );
	}
	
	public static void main(String[] args) {
		problem1();
		System.out.println("--------------------");
		problem2();
		System.out.println("--------------------");
		problem3();
		System.out.println("--------------------");
		problem4();
	}

}
